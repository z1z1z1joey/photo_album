<% if @photo.errors.present? %>
  <ul>
    <% @photo.errors.each do |error, message| %>
      <li> <%="#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
<% end %>
<div class="form container">
  <%= form_for @photo do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="form-group">
      <%= f.label :file_location %>
      <%= f.file_field :file_location %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
