# 用 BMI 來判斷身體狀況？

bmi = 26                       # 設定 bmi 為 26 

if bmi > 0 && bmi < 18         # 如果 bmi > 0 與 < 18 之間
  puts "體重過輕"               # 印出體重過輕

elsif bmi >= 18 && bmi < 24    # 如果 bmi >= 18 與 < 24 之間
  puts "正常體重"               # 印出正常體重

elsif bmi >= 24 && bmi < 27    # 如果 bmi >= 24 與 < 27 之間
  puts "體重過重，注意喔！"  # 印出體重過重，注意喔！

else
  puts "肥胖！請減肥" # 印出肥胖！請減肥
end